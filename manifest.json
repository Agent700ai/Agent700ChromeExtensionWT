{
  "manifest_version": 3,
  "name": "Agent 700 Extension",
  "version": "1.0",
  "description": "A simple asidebar extension",
  "permissions": ["sidePanel", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "js/background.js"
  },
  "side_panel": {
    "default_path": "templates/asidebar.html"
  },
  "action": {
    "default_title": "Open Agent 700 Asidebar"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}
